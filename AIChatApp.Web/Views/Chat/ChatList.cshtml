@model AIChatApp.Application.DTOs.ChatListViewModel
@{
    ViewData["Title"] = "Messages";
}

<!-- Main Container: Centered Vertically & Horizontally (Matching Discover UI) -->
<div class="min-h-screen flex flex-col py-20 bg-white">
    <div class="w-full max-w-2xl mx-auto px-4 sm:px-6">

        <!-- Header -->
        <div class="mb-12 text-center">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 mb-2">Messages</h1>
            <p class="text-gray-500 mb-8">Recent conversations with your friends.</p>

            <!-- Search Bar -->
            <div class="relative max-w-lg mx-auto">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
                <input type="text" id="chatSearchInput" placeholder="Search by name..."
                       class="block w-full pl-11 pr-4 py-4 bg-gray-50 border-none rounded-full text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-black/5 focus:bg-white shadow-sm transition-all duration-200" />
            </div>
        </div>

        <!-- Content Area -->
        <div class="space-y-12">

            <!-- Section 1: Unread Messages -->
            <!-- ID 'unread-wrapper' allows JS to hide the whole section when all are read -->
            <div id="unread-wrapper" class="@(Model.UnreadChats.Any() ? "" : "hidden")">
                <div class="flex items-center justify-between mb-6 px-1">
                    <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-widest">Unread</h3>
                    <span class="text-xs text-blue-600 font-medium bg-blue-50 px-2 py-1 rounded-full">New Messages</span>
                </div>

                <!-- ID 'unread-section' is where SignalR will .prepend() new messages -->
                <div id="unread-section" class="space-y-2">
                    @foreach (var chat in Model.UnreadChats)
                    {
                        <partial name="_ChatListItem" model="chat" />
                    }
                </div>
            </div>

            <!-- Section 2: Recent Chats -->
            <div id="recent-wrapper">
                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-widest mb-6 px-1">Recent Chats</h3>

                <!-- ID 'recent-section' is where read rows will live -->
                <div id="recent-section" class="space-y-2">
                    @if (Model.ReadChats.Any())
                    {
                        foreach (var chat in Model.ReadChats)
                        {
                            <partial name="_ChatListItem" model="chat" />
                        }
                    }
                </div>

                <!-- Empty State: Only visible if both lists are empty -->
                <div id="empty-state" class="text-center py-12 bg-gray-50 rounded-2xl border border-dashed border-gray-200 @(Model.ReadChats.Any() || Model.UnreadChats.Any() ? "hidden" : "")">
                    <p class="text-gray-400">No active conversations.</p>
                    <a asp-controller="UserList" asp-action="UsersList" class="text-black font-semibold underline mt-2 inline-block">Start a new chat</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- SignalR Client Library -->
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <!-- Your Separate JS File -->
    <script src="~/js/chat-list-realtime.js"></script>
}