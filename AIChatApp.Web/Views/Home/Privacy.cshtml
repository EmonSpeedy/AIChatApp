@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="bg-slate-50 min-h-screen py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-50 text-indigo-600 text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                Legal Documentation
            </div>
            <h1 class="text-4xl md:text-5xl font-black tracking-tight text-slate-900 mb-4">Privacy Policy</h1>
            <p class="text-slate-500 font-medium">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            <!-- Sidebar Summary (Hidden on Mobile) -->
            <div class="hidden lg:block lg:col-span-4">
                <div class="sticky top-24 space-y-6">
                    <div class="bg-white rounded-[2rem] p-8 border border-slate-100 shadow-sm">
                        <h3 class="text-sm font-black text-slate-900 uppercase tracking-widest mb-6">Quick Summary</h3>
                        <ul class="space-y-6">
                            <li class="flex gap-4">
                                <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600">
                                    <i class="fa-solid fa-user-shield text-sm"></i>
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-slate-900">Data Protection</p>
                                    <p class="text-[11px] text-slate-500 leading-relaxed mt-1">We use industry-standard encryption for all chat data.</p>
                                </div>
                            </li>
                            <li class="flex gap-4">
                                <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-emerald-50 flex items-center justify-center text-emerald-600">
                                    <i class="fa-solid fa-eye-slash text-sm"></i>
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-slate-900">Zero Selling</p>
                                    <p class="text-[11px] text-slate-500 leading-relaxed mt-1">We never sell your personal data to third parties.</p>
                                </div>
                            </li>
                            <li class="flex gap-4">
                                <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600">
                                    <i class="fa-solid fa-key text-sm"></i>
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-slate-900">Your Control</p>
                                    <p class="text-[11px] text-slate-500 leading-relaxed mt-1">You can request data deletion at any time via settings.</p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="bg-indigo-600 rounded-[2rem] p-8 text-white shadow-xl shadow-indigo-100">
                        <p class="text-xs font-bold uppercase tracking-widest mb-2 opacity-80">Need Help?</p>
                        <p class="text-sm font-medium leading-relaxed mb-6">Have questions regarding our data practices?</p>
                        <a href="mailto:3.1.actual040@gmail.com" class="inline-block w-full text-center py-3 bg-white text-indigo-600 rounded-xl text-xs font-black uppercase tracking-widest hover:bg-indigo-50 transition-colors">Contact Support</a>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="lg:col-span-8 bg-white rounded-[2.5rem] p-8 md:p-12 border border-slate-100 shadow-sm">
                <div class="prose prose-slate max-w-none space-y-12">

                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <span class="text-3xl font-black text-indigo-100">01</span>
                            <h2 class="text-2xl font-bold text-slate-900 m-0">Introduction</h2>
                        </div>
                        <p class="text-slate-600 leading-relaxed font-medium">
                            At <span class="text-indigo-600 font-bold">AIChatApp</span>, we respect your privacy and are committed to protecting your personal data. This privacy policy will inform you as to how we look after your personal data when you visit our website and tell you about your privacy rights and how the law protects you.
                        </p>
                    </section>

                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <span class="text-3xl font-black text-indigo-100">02</span>
                            <h2 class="text-2xl font-bold text-slate-900 m-0">The Data We Collect</h2>
                        </div>
                        <p class="text-slate-600 leading-relaxed mb-6 font-medium">
                            We may collect, use, store and transfer different kinds of personal data about you which we have grouped together follows:
                        </p>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
                                <h4 class="text-xs font-black text-slate-900 uppercase tracking-widest mb-1">Identity Data</h4>
                                <p class="text-[11px] text-slate-500 leading-tight">Name, username, and profile identifiers.</p>
                            </div>
                            <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
                                <h4 class="text-xs font-black text-slate-900 uppercase tracking-widest mb-1">Contact Data</h4>
                                <p class="text-[11px] text-slate-500 leading-tight">Verified email address for account security.</p>
                            </div>
                            <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
                                <h4 class="text-xs font-black text-slate-900 uppercase tracking-widest mb-1">Technical Data</h4>
                                <p class="text-[11px] text-slate-500 leading-tight">IP address, browser type, and device info.</p>
                            </div>
                            <div class="p-4 rounded-2xl bg-slate-50 border border-slate-100">
                                <h4 class="text-xs font-black text-slate-900 uppercase tracking-widest mb-1">Usage Data</h4>
                                <p class="text-[11px] text-slate-500 leading-tight">Interaction patterns and service usage logs.</p>
                            </div>
                        </div>
                    </section>

                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <span class="text-3xl font-black text-indigo-100">03</span>
                            <h2 class="text-2xl font-bold text-slate-900 m-0">How We Use Your Data</h2>
                        </div>
                        <p class="text-slate-600 leading-relaxed font-medium mb-6">
                            We will only use your personal data when the law allows us to. Most commonly, we will use your personal data in the following circumstances:
                        </p>
                        <ul class="space-y-4 m-0 p-0 list-none">
                            <li class="flex items-start gap-3 text-sm text-slate-600 font-medium">
                                <i class="fa-solid fa-check text-indigo-500 mt-1"></i>
                                <span>To register and authenticate you as a new customer.</span>
                            </li>
                            <li class="flex items-start gap-3 text-sm text-slate-600 font-medium">
                                <i class="fa-solid fa-check text-indigo-500 mt-1"></i>
                                <span>To notify you about critical security updates or policy changes.</span>
                            </li>
                            <li class="flex items-start gap-3 text-sm text-slate-600 font-medium">
                                <i class="fa-solid fa-check text-indigo-500 mt-1"></i>
                                <span>To administer and protect our business (troubleshooting, hosting, and data analysis).</span>
                            </li>
                        </ul>
                    </section>

                    <section>
                        <div class="flex items-center gap-4 mb-6">
                            <span class="text-3xl font-black text-indigo-100">04</span>
                            <h2 class="text-2xl font-bold text-slate-900 m-0">Data Security</h2>
                        </div>
                        <div class="bg-indigo-50 rounded-2xl p-6 border border-indigo-100">
                            <p class="text-sm text-indigo-900 leading-relaxed font-medium m-0">
                                We have put in place appropriate security measures to prevent your personal data from being accidentally lost, used or accessed in an unauthorized way, altered or disclosed. We limit access to your data strictly to those who have a business "need to know."
                            </p>
                        </div>
                    </section>

                    <div class="pt-12 border-t border-slate-100">
                        <p class="text-xs text-slate-400 font-bold uppercase tracking-widest text-center">
                            End of Privacy Policy • AIChatApp Inc.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>