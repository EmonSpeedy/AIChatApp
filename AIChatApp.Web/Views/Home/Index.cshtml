@{
    ViewData["Title"] = "Welcome";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <section class="text-center py-20 md:py-32">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-50 text-indigo-600 text-xs font-bold uppercase tracking-widest mb-8 animate-fade-in">
            <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-600"></span>
            </span>
            New: AI-Powered Summaries
        </div>

        <h1 class="text-5xl md:text-7xl font-black tracking-tight text-slate-900 mb-8 leading-[1.1]">
            Connect with <br />
            <span class="text-indigo-600 relative inline-block">
                Intelligence.
                <svg class="absolute -bottom-2 left-0 w-full" viewBox="0 0 358 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3 9C118.957 4.47226 238.497 3.93288 354.531 8" stroke="#6366F1" stroke-width="5" stroke-linecap="round" />
                </svg>
            </span>
        </h1>

        <p class="text-lg md:text-xl text-slate-500 max-w-2xl mx-auto mb-12 leading-relaxed font-medium">
            A minimal chatting platform where real connections meet powerful AI assistance. Secure, fast, and purely focused on human interaction.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-5">
            <a asp-controller="Auth" asp-action="Register" class="px-10 py-4 bg-indigo-600 text-white text-sm font-bold rounded-2xl hover:bg-indigo-700 hover:-translate-y-1 transition-all duration-300 shadow-xl shadow-indigo-100">
                Get Started Free
            </a>
            <a asp-controller="Auth" asp-action="Login" class="px-10 py-4 bg-white text-slate-700 border border-slate-200 text-sm font-bold rounded-2xl hover:border-indigo-600 hover:text-indigo-600 transition-all duration-300">
                Sign In
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-24 border-t border-slate-100">
        <div class="text-center mb-20">
            <h2 class="text-3xl font-bold text-slate-900 mb-4">Engineered for Performance</h2>
            <p class="text-slate-500 font-medium">Everything you need for a seamless communication experience.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Real-time Chat -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-indigo-50 text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">Real-time Chat</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Experience lag-free conversations with our robust WebSocket infrastructure designed for speed.</p>
            </div>

            <!-- AI Assistant -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-purple-50 text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">AI Intelligence</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Integrated Gemini AI helps you summarize chats, write better messages, and translate in real-time.</p>
            </div>

            <!-- Secure & Private -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-emerald-50 text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">End-to-End Security</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Your privacy is our priority. We use industry-standard encryption to keep your data protected.</p>
            </div>

            <!-- Media Sharing -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-amber-50 text-amber-600 group-hover:bg-amber-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">Rich Media</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Share photos, documents, and videos with optimized compression for fast mobile delivery.</p>
            </div>

            <!-- User Profiles -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-rose-50 text-rose-600 group-hover:bg-rose-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">Verified Profiles</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Know who you're talking to. Verified email authentication ensures a safe community for everyone.</p>
            </div>

            <!-- Performance -->
            <div class="group p-8 rounded-[2rem] bg-white border border-slate-100 hover:border-indigo-100 hover:shadow-2xl hover:shadow-indigo-50/50 transition-all duration-500">
                <div class="mb-6 inline-flex items-center justify-center h-14 w-14 rounded-2xl bg-cyan-50 text-cyan-600 group-hover:bg-cyan-600 group-hover:text-white transition-all duration-500 shadow-sm">
                    <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">High Performance</h3>
                <p class="text-slate-500 text-sm leading-relaxed font-medium">Built with ASP.NET Core for enterprise-level scalability and low-latency performance.</p>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-20">
        <div class="bg-indigo-600 rounded-[3rem] p-12 md:p-20 text-center relative overflow-hidden shadow-2xl shadow-indigo-200">
            <!-- Decorative Elements -->
            <div class="absolute top-0 right-0 -mr-16 -mt-16 w-64 h-64 bg-indigo-500 rounded-full opacity-20"></div>
            <div class="absolute bottom-0 left-0 -ml-16 -mb-16 w-64 h-64 bg-indigo-400 rounded-full opacity-20"></div>

            <h2 class="text-3xl md:text-5xl font-black text-white mb-6 relative z-10">Ready to join the future?</h2>
            <p class="text-indigo-100 text-lg mb-10 max-w-xl mx-auto relative z-10 font-medium">Create your free account in less than a minute and start chatting with the power of AI.</p>
            <a asp-controller="Auth" asp-action="Register" class="inline-block px-12 py-5 bg-white text-indigo-600 font-black rounded-2xl hover:bg-slate-50 transition-all duration-300 relative z-10 hover:scale-105 shadow-xl">
                Get Started Now
            </a>
        </div>
    </section>
</div>