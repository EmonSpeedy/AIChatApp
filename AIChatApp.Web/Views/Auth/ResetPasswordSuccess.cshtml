@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Brand / Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-emerald-500 rounded-[2rem] shadow-xl shadow-emerald-100 mb-6 transition-transform hover:scale-110 duration-500">
                <i class="fa-solid fa-check-double text-white text-3xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">All Set!</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">
                Your security credentials have been updated.
            </p>
        </div>

        <!-- Success Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50 text-center">
            <div class="space-y-6">
                <div class="space-y-4">
                    <h3 class="text-lg font-bold text-slate-900">Password Reset Successful</h3>
                    <p class="text-slate-500 text-sm leading-relaxed font-medium">
                        Your password has been successfully changed. You can now use your new credentials to sign in to your secure dashboard.
                    </p>
                </div>

                <!-- Protective Notice -->
                <div class="p-4 bg-slate-50 rounded-2xl border border-slate-100 flex items-start gap-3 text-left">
                    <i class="fa-solid fa-shield-heart text-indigo-500 mt-0.5"></i>
                    <p class="text-[11px] text-slate-600 font-bold leading-tight uppercase tracking-wide">
                        Security Tip: Always use a unique password and enable two-factor authentication if available.
                    </p>
                </div>

                <!-- Action Button -->
                <div class="pt-4">
                    <a asp-controller="Auth" asp-action="Login"
                       class="group relative w-full flex items-center justify-center py-4 px-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg shadow-indigo-100 hover:scale-[1.01] active:scale-[0.98]">
                        <i class="fa-solid fa-arrow-left mr-2 text-[10px] group-hover:-translate-x-1 transition-transform"></i>
                        Return to Login
                    </a>
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="mt-8 text-center">
            <p class="text-[10px] text-slate-400 font-black uppercase tracking-[0.2em]">
                Secure Session Management Active
            </p>
        </div>
    </div>
</div>