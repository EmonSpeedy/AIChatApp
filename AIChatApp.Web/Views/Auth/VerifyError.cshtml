@{
    ViewData["Title"] = "Verification Failed";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Brand / Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-rose-500 rounded-[2rem] shadow-xl shadow-rose-100 mb-6 transition-transform hover:scale-110 duration-500">
                <i class="fa-solid fa-link-slash text-white text-3xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Verification Failed</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">
                The link provided is no longer valid.
            </p>
        </div>

        <!-- Failure Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50 text-center">
            <div class="space-y-6">
                <div class="space-y-4 text-slate-500 text-sm leading-relaxed font-medium">
                    <p>
                        We're sorry, but the verification link you clicked is either <span class="text-slate-900 font-bold">invalid, expired</span>, or has already been utilized to activate an account.
                    </p>
                    <p>
                        Security links are temporary to protect your identity. Please try the registration process again or contact our support team.
                    </p>
                </div>

                <!-- Help Alert -->
                <div class="p-4 bg-rose-50 rounded-2xl border border-rose-100 flex items-start gap-3 text-left">
                    <i class="fa-solid fa-circle-exclamation text-rose-500 mt-0.5"></i>
                    <p class="text-[11px] text-rose-700 font-bold leading-tight uppercase tracking-wide">
                        Try requesting a new link by attempting to sign in or creating a new account.
                    </p>
                </div>

                <!-- Action Buttons -->
                <div class="pt-4 flex flex-col gap-3">
                    <a asp-controller="Auth" asp-action="Register"
                       class="group relative w-full flex items-center justify-center py-4 px-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg shadow-indigo-100 hover:scale-[1.01] active:scale-[0.98]">
                        <i class="fa-solid fa-user-plus mr-2 text-[10px]"></i>
                        Register Again
                    </a>

                    <a asp-controller="Home" asp-action="Index"
                       class="w-full flex items-center justify-center py-4 px-4 bg-slate-50 text-slate-600 text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-slate-100 transition-all border border-slate-100">
                        Go to Homepage
                    </a>
                </div>
            </div>
        </div>

        <!-- Support Footer -->
        <div class="mt-8 text-center">
            <p class="text-[10px] text-slate-400 font-black uppercase tracking-[0.2em]">
                Need help? <a href="#" class="text-indigo-600 hover:underline">Contact Support</a>
            </p>
        </div>
    </div>
</div>