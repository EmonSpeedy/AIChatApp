@model dynamic

@{
    ViewData["Title"] = "Registration Successful";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Brand / Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-emerald-500 rounded-[2rem] shadow-xl shadow-emerald-100 mb-6 transition-transform hover:rotate-12 duration-500">
                <i class="fa-solid fa-circle-check text-white text-3xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Welcome Aboard!</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">
                Your account has been created successfully.
            </p>
        </div>

        <!-- Success Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50 text-center">
            <div class="space-y-6">
                <div class="space-y-4">
                    <h3 class="text-lg font-bold text-slate-900">One final step...</h3>
                    <p class="text-slate-500 text-sm leading-relaxed font-medium">
                        We've sent a verification email to your inbox. Please verify your account to access all features and secure your identity.
                    </p>
                </div>

                <!-- Info Box -->
                <div class="p-4 bg-indigo-50 rounded-2xl border border-indigo-100 flex items-start gap-3 text-left">
                    <i class="fa-solid fa-circle-info text-indigo-500 mt-0.5"></i>
                    <p class="text-[11px] text-indigo-700 font-bold leading-tight uppercase tracking-wide">
                        Can't find it? Please check your spam folder or wait a few minutes for delivery.
                    </p>
                </div>

                <!-- Action Button -->
                <div class="pt-4">
                    <a asp-controller="Auth" asp-action="Login"
                       class="group relative w-full flex items-center justify-center py-4 px-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg shadow-indigo-100 hover:scale-[1.01] active:scale-[0.98]">
                        <span class="mr-2">Continue to Sign In</span>
                        <i class="fa-solid fa-arrow-right text-[10px] group-hover:translate-x-1 transition-transform"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Support Info -->
        <div class="mt-10 text-center">
            <p class="text-[11px] text-slate-400 font-black uppercase tracking-[0.2em]">
                Verified Security Partner
            </p>
            <div class="mt-4 flex justify-center gap-8 grayscale opacity-30">
                <i class="fa-brands fa-stripe text-2xl"></i>
                <i class="fa-brands fa-aws text-2xl"></i>
                <i class="fa-brands fa-google text-2xl"></i>
            </div>
        </div>
    </div>
</div>