@model AIChatApp.Application.DTOs.RegisterDto

@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Brand / Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-600 rounded-[1.5rem] shadow-xl shadow-indigo-100 mb-6">
                <i class="fa-solid fa-user-plus text-white text-2xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Join AIChatApp</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium">
                Create your account and start connecting with intelligence.
            </p>
        </div>

        <!-- Registration Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50">
            <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-5">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-rose-50 text-rose-600 text-xs font-bold border border-rose-100 mb-6 text-center"></div>

                <!-- Full Name -->
                <div>
                    <label asp-for="FullName" class="block text-xs font-black text-slate-900 uppercase tracking-widest mb-2 ml-1">Full Name</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="fa-solid fa-signature text-sm"></i>
                        </div>
                        <input asp-for="FullName" type="text"
                               class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="John Doe">
                    </div>
                    <span asp-validation-for="FullName" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <!-- Username -->
                <div>
                    <label asp-for="UserName" class="block text-xs font-black text-slate-900 uppercase tracking-widest mb-2 ml-1">Username</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="fa-solid fa-at text-sm"></i>
                        </div>
                        <input asp-for="UserName" type="text"
                               class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="johndoe">
                    </div>
                    <span asp-validation-for="UserName" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-xs font-black text-slate-900 uppercase tracking-widest mb-2 ml-1">Email Address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400">
                            <i class="fa-solid fa-envelope text-sm"></i>
                        </div>
                        <input asp-for="Email" type="email"
                               class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="you@example.com">
                    </div>
                    <span asp-validation-for="Email" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <!-- Password Row -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Password" class="block text-xs font-black text-slate-900 uppercase tracking-widest mb-2 ml-1">Password</label>
                        <input asp-for="Password" type="password"
                               class="block w-full px-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="••••••••">
                        <span asp-validation-for="Password" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                    </div>

                    <div>
                        <label asp-for="ConfirmPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest mb-2 ml-1">Confirm</label>
                        <input asp-for="ConfirmPassword" type="password"
                               class="block w-full px-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="••••••••">
                        <span asp-validation-for="ConfirmPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                    </div>
                </div>

                <!-- Submit -->
                <div class="pt-4">
                    <button type="submit" class="group relative w-full flex justify-center py-4 px-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg shadow-indigo-100 hover:scale-[1.01] active:scale-[0.98]">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-4 opacity-0 group-hover:opacity-100 transition-opacity">
                            <i class="fa-solid fa-arrow-right text-xs"></i>
                        </span>
                        Create My Account
                    </button>
                </div>
            </form>

            <!-- Divider -->
            <div class="relative my-8">
                <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-slate-100"></div></div>
                <div class="relative flex justify-center text-xs uppercase"><span class="bg-white px-4 text-slate-400 font-bold tracking-widest">Help</span></div>
            </div>

            <p class="text-center text-xs font-bold text-slate-500">
                Already part of the community?
                <a href="/Auth/Login" class="text-indigo-600 hover:text-indigo-700 ml-1 transition-colors underline underline-offset-4 decoration-indigo-200 hover:decoration-indigo-600">Sign in here</a>
            </p>
        </div>

        <!-- Footer Note -->
        <p class="mt-8 text-center text-[10px] text-slate-400 font-bold uppercase tracking-widest">
            By registering, you agree to our <a href="/Home/Privacy" class="hover:text-slate-600">Privacy Policy</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}