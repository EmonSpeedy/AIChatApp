@model AIChatApp.Application.DTOs.ResetPasswordDto

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8 bg-slate-50">
    <div class="w-full max-w-md">
        <!-- Brand / Header -->
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-600 rounded-[1.5rem] shadow-xl shadow-indigo-100 mb-6 transition-transform hover:-rotate-6">
                <i class="fa-solid fa-key text-white text-2xl"></i>
            </div>
            <h2 class="text-3xl font-black tracking-tight text-slate-900">Secure Reset</h2>
            <p class="mt-3 text-sm text-slate-500 font-medium max-w-[280px] mx-auto">
                Please enter your new secure password below to regain access.
            </p>
        </div>

        <!-- Reset Card -->
        <div class="bg-white rounded-[2.5rem] p-8 md:p-10 border border-slate-100 shadow-2xl shadow-slate-200/50">
            <form asp-controller="Auth" asp-action="ResetPassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Hidden fields required for identity logic -->
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <!-- Error Summary -->
                <div asp-validation-summary="ModelOnly" class="p-4 rounded-xl bg-rose-50 text-rose-600 text-xs font-bold border border-rose-100 text-center"></div>

                <!-- New Password -->
                <div class="space-y-2">
                    <label asp-for="NewPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest ml-1">New Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-indigo-600 transition-colors">
                            <i class="fa-solid fa-lock-open text-sm"></i>
                        </div>
                        <input asp-for="NewPassword" type="password"
                               class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="Min. 6 characters">
                    </div>
                    <span asp-validation-for="NewPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <!-- Confirm Password -->
                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="block text-xs font-black text-slate-900 uppercase tracking-widest ml-1">Confirm New Password</label>
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-indigo-600 transition-colors">
                            <i class="fa-solid fa-circle-check text-sm"></i>
                        </div>
                        <input asp-for="ConfirmPassword" type="password"
                               class="block w-full pl-11 pr-4 py-3.5 bg-slate-50 border border-slate-100 rounded-2xl text-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:bg-white transition-all font-medium"
                               placeholder="Repeat password">
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="mt-1.5 block text-[11px] text-rose-500 font-bold ml-1"></span>
                </div>

                <!-- Action Button -->
                <div class="pt-2">
                    <button type="submit" class="group relative w-full flex justify-center py-4 px-4 bg-indigo-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg shadow-indigo-100 hover:scale-[1.01] active:scale-[0.98]">
                        Update Password
                    </button>
                </div>
            </form>

            <!-- Footer Redirection -->
            <div class="mt-8 pt-6 border-t border-slate-50">
                <p class="text-center text-xs font-bold text-slate-500">
                    Remembered your password?
                    <a asp-controller="Auth" asp-action="Login" class="text-indigo-600 hover:text-indigo-700 ml-1 transition-colors underline underline-offset-4 decoration-indigo-200 hover:decoration-indigo-600">Return to Sign In</a>
                </p>
            </div>
        </div>

        <!-- Security Badge -->
        <div class="mt-8 text-center">
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-slate-100 rounded-full border border-slate-200">
                <i class="fa-solid fa-shield-check text-slate-400 text-[10px]"></i>
                <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">End-to-End Encrypted</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}